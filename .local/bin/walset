#!/bin/bash

WALL_DIR="$HOME/Pictures/wallpapers"
dir="$HOME/.config/rofi/wallpaper"
theme='style'

CWD="$(pwd)"

cd "$WALL_DIR" || exit

IFS=$'\n'

SELECTED_WALL=$(for a in *.jpg *.png *.jpeg; do echo -en "$a\0icon\x1f$a\n"; done | rofi -dmenu -theme ${dir}/${theme}.rasi -p "")

if [ -n "$SELECTED_WALL" ]; then
    ${HOME}/.local/bin/walset-backend "$SELECTED_WALL"
fi

cd "$CWD" || exit


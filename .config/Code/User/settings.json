{
    /*

    VIM SETTINGS

    */
    "vim.leader": "<Space>",
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.smartRelativeLine": true,
    "vim.useCtrlKeys": true,
    "vim.highlightedyank.enable": true,
    "vim.autoindent": true,
    "vim.foldfix": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<Esc>"
            ],
            "when": [
                "editorFocus"
            ],
            "commands": [
                ":nohl"
            ],
            "silent": true
        }
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.handleKeys": {
        "<C-f>": false,
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    /*

    OTHER SETTINGS

    */
    "terminal.integrated.fontFamily": "Iosevka Nerd Font",
    "terminal.integrated.fontLigatures": true,
    "editor.fontFamily": "Iosevka Nerd Font, 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "redhat.telemetry.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.formatOnSave": true,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    // https://github.com/glennraya/vscode-settings-json/blob/main/settings.json
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.snippetSuggestions": "top",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    // "workbench.editor.showTabs": "none", // hides the tabs on top.
    "breadcrumbs.enabled": false, // hides the current location from the top
    "editor.minimap.enabled": false, // disables the minimap
    "editor.hover.enabled": true,
    "editor.cursorSurroundingLines": 10,
    "supermaven.enable": {
        "*": true,
        "java": true
    },
    "editor.tokenColorCustomizations": {
        "comments": "#ffffff6e"
    },
    "debug.onTaskErrors": "debugAnyway",
    "workbench.sideBar.location": "right",
    // "workbench.activityBar.location": "top",
    "window.customTitleBarVisibility": "never", // Change this if you want to see the title bar + settings button + account button
    "window.density.editorTabHeight": "compact", // Alt for toggle
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "native",
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",
    "glassit.alpha": 235,
    "workbench.colorCustomizations": {
        "editor.background": "#000000",
        "editor.selectionBackground": "#ffffff30",
        // "activityBarTop.background": "#000000",
        "editorGutter.background": "#000000",
        "editor.lineHighlightBackground": "#000000",
        "sideBar.background": "#000000",
        "activityBar.background": "#000000",
        "statusBar.background": "#000000",
        "editorGroupHeader.tabsBackground": "#000000",
        "tab.inactiveBackground": "#000000",
        "tab.activeBorder": "#ffffff",
    },
    "editor.codeActionsOnSave": {
        "source.addMissingImports": "always",
        "source.organizeImports": "always",
    },
    // "editor.linkedEditing": true,
    // "editor.suggest.insertMode": "replace",
    "editor.bracketPairColorization.enabled": false,
    "workbench.colorTheme": "Tsoding Dark Theme",
}
/*****----- Configuration -----*****/
configuration {
    show-icons:                 false;
}

/*****----- Global Properties -----*****/
// @import                          "../shared/colors.rasi"
// @import                          "../shared/fonts.rasi"

@import "../shared/colors.rasi"
@import "../shared/fonts.rasi"

// USE_ICON=NO

* {
    border-colour:               var(primary);
    handle-colour:               var(primary);
    
    background-colour:           #000000;
    foreground-colour:           #ffffff;
    alternate-background:        var(background-alt);
    
    normal-background:           #000000;
    normal-foreground:           #ffffff;
    
    urgent-background:           var(tertiary);
    urgent-foreground:           #000000;
    
    active-background:           var(secondary);
    active-foreground:           #000000;
    
    selected-normal-background:  var(primary);
    selected-normal-foreground:  #000000;
    
    selected-urgent-background:  var(secondary);
    selected-urgent-foreground:  #000000;
    
    selected-active-background:  var(tertiary);
    selected-active-foreground:  #000000;
    
    alternate-normal-background: #000000;
    alternate-normal-foreground: #ffffff;
    
    alternate-urgent-background: var(tertiary);
    alternate-urgent-foreground: #000000;
    
    alternate-active-background: var(secondary);
    alternate-active-foreground: #000000;
}

/*****----- Main Window -----*****/
window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       500px;
    x-offset:                    0px;
    y-offset:                    0px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                @border-colour;
    cursor:                      "default";
    background-color:            @background-colour;
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     0px;
    margin:                      0px;
    padding:                     5px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                @border-colour;
    background-color:            transparent;
    children:                    [ "listview" ];
}

